<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebDiaryVersion1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebDiaryVersion1.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="css/menu-styles.css" asp-append-version="true">
</head>
<body>
    <header>
        <nav>
            <div class="menu-icon logo">WEB DIARY</div>
            <ul class="menu">
                <li><a asp-controller="MainPage" asp-action="Index">Главная</a></li>
                <li><a asp-controller="Register" asp-action="Index">Регистрация</a></li>
                <li><a asp-controller="Login" asp-action="Index">Войти</a></li>

            </ul>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - WebDiaryVersion1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/menu.js"></script>
</body>
</html>
